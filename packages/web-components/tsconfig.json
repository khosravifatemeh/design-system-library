{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "composite": true,
    "paths": {
      "@scss-builder": ["scss-builder"],
      "@colors": ["colors"]
    }
  },
  "include": ["src/scss-builder/**/*.ts", "src/colors/**/*.ts"]
}
